<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.AppCompat.Toolbar.Menu">
        <item name="iconTint">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <style name="quoteFragmentPostTextView">
        <item name="borderRound">16dp</item>
        <item name="backgroundColor">#E31616</item>
    </style>
    <style name="attendanceTimeViewContainer">
        <item name="android:radius">16dp</item>
        <item name="background">?attr/colorSurfaceContainer</item>
    </style>
    <style name="attendanceTimeViewContainer.timeViewFont">
        <item name="android:textSize">140sp</item>
    </style>
    <style name="attendanceTimeViewContainer.dateViewFont">
        <item name="android:textSize">40sp</item>
    </style>
    <!--
    Styles for Full Screen Dialog + Animations
    -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="DialogTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="ButtonBarStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">600dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="NegativeButtonStyle" parent="PositiveButtonStyle">
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">38sp</item>
        <item name="android:backgroundTint">@color/md_theme_primary</item>
        <item name="android:width">286dp</item>
        <item name="android:height">100dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="MyDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/DialogTitle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarStyle">@style/ButtonBarStyle</item>
        <item name="alertDialogCenterButtons">true</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="SmallDialogTitle" parent="DialogTitle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SmallButtonBarStyle" parent="ButtonBarStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">600dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="SmallNegativeButtonStyle" parent="SmallPositiveButtonStyle">
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="SmallPositiveButtonStyle" parent="PositiveButtonStyle">
        <item name="android:textSize">19sp</item>
        <item name="android:height">60dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MySmallDialog" parent="MyDialog">
        <item name="android:windowTitleStyle">@style/SmallDialogTitle</item>
        <item name="buttonBarNegativeButtonStyle">@style/SmallNegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/SmallPositiveButtonStyle</item>
        <item name="buttonBarStyle">@style/SmallButtonBarStyle</item>
    </style>

    <style name="SinglePositiveButtonStyle" parent="PositiveButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MySingleButtonDialog" parent="MyDialog">
        <item name="android:windowTitleStyle">@style/DialogTitle</item>
        <item name="buttonBarNegativeButtonStyle">@style/SmallNegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/SinglePositiveButtonStyle</item>
        <item name="buttonBarStyle">@style/ButtonBarStyle</item>
    </style>

    <style name="SettingsViewButtons">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">16dp</item>
    </style>
</resources>