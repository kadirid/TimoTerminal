<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_absence_root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="70dp"
        tools:context=".fragmentViews.ProjectFragment"
        tools:layout_marginStart="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/first_page_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal"
                tools:visibility="visible">

                <LinearLayout
                    android:id="@+id/dropdown_menu_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/absence_type_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="32sp"
                        tools:text="Abwesenheitsart"
                        />

                    <TextView
                        android:id="@+id/absence_time_counter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="120sp"
                        tools:text="00:00:00"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/time_details_layout"
                    android:layout_marginStart="20dp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_container_16dp"
                        android:backgroundTint="@color/md_theme_surfaceContainer"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:gravity="center"
                            tools:text="#Date"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/time_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            tools:text="#Time"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/go_to_second_page_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@drawable/rounded_container_16dp_ripple"
                        android:gravity="center"
                        android:text="@string/details"
                        android:textSize="32sp"
                        android:textColor="?attr/colorOnPrimary"
                        app:backgroundTint="?attr/colorPrimary"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_page_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="gone">

                <LinearLayout
                    android:id="@+id/second_dropdown_menu_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/second_absence_type_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        tools:text="Abwesenheitsart"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_layout_absence_start_stop_deputy"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="@string/project"
                        tools:hint="Vertreter"
                        android:layout_marginTop="8dp">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/deputy"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:dropDownWidth="704dp"
                            android:imeOptions="actionDone"
                            android:inputType="textNoSuggestions"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            app:hintAnimationEnabled="false"
                            app:boxStrokeWidth="1dp"
                            app:boxStrokeWidthFocused="2dp"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/description_container"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginTop="8dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/text_input_layout_absence_edit_description"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/description"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/description"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:imeOptions="actionDone"
                                android:inputType="textMultiLine"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/description_close_button"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/square_button_background"
                            android:textAllCaps="false"
                            app:icon="@drawable/icon_keyboard_hide_inset"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconSize="20dp"
                            app:layout_constraintBottom_toBottomOf="@id/text_input_layout_absence_edit_description"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/text_input_layout_absence_edit_description" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/detail_time_layout"
                    android:layout_marginStart="20dp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_container_16dp"
                        android:backgroundTint="@color/md_theme_surfaceContainer"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/second_date_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:gravity="center"
                            tools:text="#Date"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/second_time_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            tools:text="#Time"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/second_time_counter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        tools:text="00:00:00"
                        android:textSize="48sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/action_button_container"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <Button
                    android:id="@+id/stop_absence_button"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_width="263dp"
                    android:layout_height="120dp"
                    android:background="@drawable/rounded_container_16dp_ripple"
                    tools:text="Aktuelle PZ beenden"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAlignment="viewStart"
                    android:contentDescription="@string/stop"
                    android:textSize="40sp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/go"
                    app:icon="@drawable/stop_circle_24dp"
                    app:iconGravity="end"
                    app:iconSize="96dp"
                    app:iconTint="@color/white" />

                <Button
                    android:id="@+id/start_absence_button"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:background="@drawable/rounded_container_16dp_ripple"
                    tools:text="Projektzeit starten"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textAlignment="viewStart"
                    android:contentDescription="@string/start"
                    android:textSize="40sp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/come"
                    app:icon="@drawable/play_circle_24dp"
                    app:iconGravity="end"
                    app:iconSize="96dp"
                    app:iconTint="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="24dp"
        android:layout_gravity="bottom|end"
        android:background="@drawable/square_button_background"
        android:textAllCaps="false"
        app:icon="@drawable/baseline_close_24"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</FrameLayout>
