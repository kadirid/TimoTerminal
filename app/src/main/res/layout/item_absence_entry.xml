<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/absence_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageView
        android:id="@+id/image_view_absence_list_info_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="Info Icon"
        android:src="@drawable/baseline_exclamation_24"
        android:visibility="invisible"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_container_4dp_ripple"
        android:backgroundTint="?attr/colorPrimaryContainer">

        <TextView
            android:id="@+id/text_view_absence_list_date_time"
            android:textAppearance="@style/NormalFontWeightAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="18.09.2025 08:00 - 19.09.2025 10:15" />

        <TextView
            android:id="@+id/text_view_absence_list_user_name"
            android:textAppearance="@style/NormalFontWeightAppearance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_view_absence_list_date_time"
            app:layout_constraintTop_toTopOf="@id/text_view_absence_list_date_time"
            tools:text="Vorname Administrator" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            app:layout_constraintEnd_toEndOf="@id/text_view_absence_list_user_name"
            app:layout_constraintStart_toStartOf="@id/text_view_absence_list_date_time"
            app:layout_constraintTop_toBottomOf="@id/text_view_absence_list_date_time">

            <TextView
                android:id="@+id/text_view_absence_list_absence_type"
                android:textAppearance="@style/NormalFontWeightAppearance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="14sp"
                tools:text="A: Krank" />

            <TextView
                android:id="@+id/text_view_absence_list_matrix"
                android:textAppearance="@style/NormalFontWeightAppearance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="14sp"
                tools:text="M: Matrix" />

            <TextView
                android:id="@+id/text_view_absence_list_deputy"
                android:textAppearance="@style/NormalFontWeightAppearance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAlignment="textEnd"
                android:textSize="14sp"
                tools:text="V: M1, Martin" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>