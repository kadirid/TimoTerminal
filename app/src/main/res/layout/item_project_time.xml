<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="?attr/colorPrimaryContainer"
    android:background="@drawable/rounded_container_16dp_ripple"
    android:layout_marginTop="1dp"
    android:layout_marginHorizontal="10dp"
    android:orientation="vertical"

    app:cardCornerRadius="6dp">

    <TextView
        android:id="@+id/text_view_project_time_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        style="@style/TextAppearance.Material3.LabelMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="18.09.2025 08:00 - 19.09.2025 10:15" />

    <TextView
        android:id="@+id/text_view_project_time_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="textEnd"
        android:ellipsize="end"
        android:maxLines="1"
        style="@style/TextAppearance.Material3.HeadlineSmall"
        app:layout_constraintTop_toTopOf="@id/text_view_project_time_id"
        app:layout_constraintStart_toEndOf="@id/text_view_project_time_id"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Vorname Administrator" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_project_time_id"
        app:layout_constraintStart_toStartOf="@id/text_view_project_time_id"
        app:layout_constraintEnd_toEndOf="@id/text_view_project_time_user_name">

        <TextView
            android:id="@+id/text_view_project_time_project"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_weight="1"
            style="@style/TextAppearance.Material3.HeadlineSmall"
            tools:text="P: Projektname" />

        <TextView
            android:id="@+id/text_view_project_time_task"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            style="@style/TextAppearance.Material3.HeadlineSmall"
            tools:text="V: Vorgangsname" />

        <TextView
            android:id="@+id/text_view_project_time_customer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            style="@style/TextAppearance.Material3.HeadlineSmall"
            tools:text="K: Kundennamen" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>